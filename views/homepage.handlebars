<!-- Loop over each object in the submissions array -->
{{#each submissions as |submission| }}
<div class="row mb-4 submission">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/submissions/{{submission.id}}">{{submission.name}}</a>
    </h2>
    <p>Created by {{submission.user.name}} on {{format_date submission.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{submission.description}}
    </p>
  </div>
</div>
{{/each}}
